{
    "name": "comsave/salesforce-outbound-message-tower",
    "type": "project",
    "license": "MIT",
    "require": {
        "php": ">=7.2",
        "ext-SimpleXML": "^7.3",
        "ext-ctype": "*",
        "ext-iconv": "*",
        "symfony/console": "4.3.*",
        "symfony/dotenv": "4.3.*",
        "symfony/flex": "^1.3.1",
        "symfony/framework-bundle": "4.3.*",
        "symfony/monolog-bundle": "^3.5",
        "symfony/security-bundle": "4.3.*",
        "symfony/yaml": "4.3.*"
    },
    "require-dev": {
        "phpunit/php-code-coverage": "^6.0",
        "phpunit/phpunit": "^7.0",
        "symfony/maker-bundle": "^1.14",
        "symfony/phpunit-bridge": "^4.3",
        "symfony/web-server-bundle": "4.3.*"
    },
    "config": {
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "salesforce-outbound-message-tower\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "replace": {
        "paragonie/random_compat": "2.*",
        "symfony/polyfill-ctype": "*",
        "symfony/polyfill-iconv": "*",
        "symfony/polyfill-php71": "*",
        "symfony/polyfill-php70": "*",
        "symfony/polyfill-php56": "*"
    },
    "scripts": {
        "auto-scripts": {
            "cache:clear": "symfony-cmd",
            "assets:install %PUBLIC_DIR%": "symfony-cmd"
        },
        "post-install-cmd": [
            "@auto-scripts"
        ],
        "post-update-cmd": [
            "@auto-scripts"
        ],
        "dev-container": "docker exec $(docker ps | grep 'salesforce-outbound-message-tower' | awk '{ print $1 }')",
        "dev-composer": [
            "docker exec $(docker ps | grep 'salesforce-outbound-message-tower' | awk '{ print $1 }') php -d memory_limit=-1 $(which composer)"
        ],
        "dev-undeploy": [
            "docker-compose down",
            "IS_RUNNING=$(docker ps | grep salesforce-outbound-message-tower | wc -l | awk '{ print $1 }'); while [ \"$IS_RUNNING\" -gt 0 ] ; do IS_RUNNING=$(docker ps | grep salesforce-outbound-message-tower | wc -l | awk '{ print $1 }'); sleep 1; done;",
            "docker-sync stop"
        ],
        "dev-deploy": [
            "docker-sync start",
            "docker-compose -f docker-compose.yml -f docker-compose.dev.yml up -d",
            "IS_RUNNING=$(docker ps | grep salesforce-outbound-message-tower | wc -l | awk '{ print $1 }'); while [ \"$IS_RUNNING\" -lt 1 ] ; do IS_RUNNING=$(docker ps | grep salesforce-outbound-message-tower | wc -l | awk '{ print $1 }'); sleep 1; done;"
        ],
        "run-tests": "vendor/bin/phpunit --no-coverage",
        "run-coverage": "vendor/bin/phpunit --coverage-clover tests/_output/coverage.xml",
        "run-coverage-text": "vendor/bin/phpunit --coverage-text=tests/_output/coverage.txt && cat tests/_output/coverage.txt"
    },
    "conflict": {
        "symfony/symfony": "*"
    },
    "extra": {
        "symfony": {
            "allow-contrib": false,
            "require": "4.3.*"
        }
    },
    "authors": [
        {
            "name": "Vaidas Bagdonas",
            "email": "vaidas.bagdonas@comsave.com"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true
}
